package com.kh.chap02.loop;

public class B_while {
	/*
	 * while문
	 * [표현법]
	 * 
	 * [초기식]	//필수아님
	 * while(조건식) {
	 * 	//반복적으로 실행할 코드.
	 * 	[증감식]	//필수아님.
	 * }
	 * 
	 * */
	public void method1() {
		// for문을 while문으로 변경
		int i = 0;
		while(i < 5) {
			System.out.println("안녕하시오");
			i++;
		}
	}
	public void method2() {
		
		//while문으로 5회 반복하여 아래 코드 출력.
		// 1 2 3 4 5 
		
		int i = 1;
		while(i<=5) {
			System.out.print(i+" ");
			i++;
		}
	}

}
